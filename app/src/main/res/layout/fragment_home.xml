<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/homeText"
        android:layout_width="330dp"
        android:layout_height="112dp"
        android:layout_marginTop="24dp"
        android:text="@string/welcomeBack"
        android:textAlignment="center"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="332dp"
        android:layout_height="149dp"
        android:layout_alignParentTop="true"
        android:minHeight="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeText">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primaryColor"
            android:outlineAmbientShadowColor="@color/primaryColor">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/calValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="47dp"
                android:text="@string/testRemainingCalValue"
                android:textAlignment="center"
                android:textColor="@color/secondaryTextColor"
                android:textSize="50sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/remainingCalText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="@string/remainingCalText"
                android:textAlignment="center"
                android:textColor="@color/secondaryTextColor"
                android:textSize="25sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/caloriesLeftText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:text="@string/caloriesRemaining"
                android:textAlignment="center"
                android:textColor="@color/secondaryTextColor"
                android:textSize="25sp" />

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>